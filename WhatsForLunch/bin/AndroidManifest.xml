<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.whatsforlunch"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:persistent="true"
        android:theme="@style/WhatsForLunchTheme"
        >
        <activity
            android:name="com.example.whatsforlunch.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.whatsforlunch.Enter_Foods"
            android:label="@string/title_activity_enter__foods"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="com.example.whatsforlunch.User_Settings"
            android:label="@string/title_activity_user__settings"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="com.example.whatsforlunch.Review_Trip"
            android:label="@string/title_activity_display__trip"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="com.example.whatsforlunch.Trip_Edit"
            android:label="@string/title_activity_trip__edit" >
        </activity>
        <activity
            android:name="com.example.whatsforlunch.SeeWhatsForLunch"
            android:label="@string/title_activity_see_whats_for_lunch" >
        </activity>
        <activity
            android:name="com.example.whatsforlunch.WhatsForLunch"
            android:label="@string/title_activity_whats_for_lunch" >
        </activity>
        <activity
            android:name="com.example.whatsforlunch.Trip_Select"
            android:label="@string/title_activity_trip_select" >
        </activity>
    </application>

</manifest>