<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/greentextured">


    <!-- Heading for the recipes we give the user -->

    <TextView
        android:id="@+id/recipeType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/whats_for_lunch_given_recipes"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <!-- Button to send recipes to API, need to put recipes below heading/above button 
    	 TODO: make button test better, need to advertise recipes are weighted toward expiring foods
    	 in a better less wordy way-->

    <!-- Heading for the recipes user wants to input -->

    <!-- Heading for the recipes user wants to input-->

    <!-- Allow user to enter their own recipes, again display above button below heading -->

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="@string/whats_for_lunch_get_user_recipes" 
        android:onClick="launchUserRecipes"/>

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="164dp"
        android:layout_above="@+id/foodChange"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/recipeType" >

    </ListView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/foodChange"
        android:textStyle="bold"
        android:text="@string/whats_for_lunch_my_recipes"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/moreRecipes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@android:id/list"
        android:onClick="search"
        android:text="@string/whats_for_lunch_more" />

    <Button
        android:id="@+id/foodChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/moreRecipes"
        android:onClick="foodButton"
        android:text="@string/whats_for_lunch_get_more_recipes"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/query"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/foodChange"
        android:layout_alignParentLeft="true"
        android:layout_below="@android:id/list"
        android:layout_toLeftOf="@+id/foodChange"
        android:ems="10"
        android:hint="@string/whats_for_lunch_search_terms" >
        <requestFocus />
    </EditText>
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

    

    <TextView
        android:id="@+id/displayUserRecipes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView2"
        android:ems="10" />
    
    </ScrollView>
    </RelativeLayout>